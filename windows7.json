{
  "variables": {
    "username": "vagrant",
    "password": "vagrant",
    "disk_size": "20000",
    "vm_name": "windows7",
    "vm_memory": "2048",
    "vm_cpus": "1"
  },

  "builders": [
    {
      "type": "virtualbox-iso",
      "communicator": "winrm",
      "vm_name": "{{ user `vm_name` }}",
      "iso_url": "file://XXXXXXXXXXXXXXXXXXXXXXXXXXx",
      "iso_checksum": "md5:XXXXXXXXXXXXXXXXXXXXXXXXXXXXx",
      "guest_os_type": "Windows7_64",
      "boot_wait": "2m",
      "headless": false,
      "winrm_username": "{{ user `username` }}",
      "winrm_password": "{{ user `password` }}",
      "winrm_timeout": "30m",
      "shutdown_timeout": "1h",
      "post_shutdown_delay": "180s",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "disk_size": "{{ user `disk_size`}}",
      "hard_drive_interface": "sata",
      "floppy_files": [
        "floppy/Autounattend.xml",
        "floppy/install-winrm.bat",
        "floppy/fixnetwork.ps1"
      ],
      "vboxmanage": [
        ["modifyvm", "{{ .Name }}", "--memory", "2048"],
        ["modifyvm", "{{ .Name }}", "--cpus", "2"]
      ],
      "guest_additions_mode": "attach"
    }
  ],

  "provisioners": [
    {
      "type": "powershell",
      "script": "scripts/guest_additions.ps1",
      "elevated_user": "{{ user `username` }}",
      "elevated_password": "{{ user `password` }}"
    },
    {
      "type": "powershell",
      "scripts": "scripts/chocolatey.ps1",
      "elevated_user": "{{ user `username` }}",
      "elevated_password": "{{ user `password` }}"
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "compression_level": 0,
      "output": "box/windows7.box",
      "vagrantfile_template": "tpl/Vagrantfile.template"
    }
  ]
}
